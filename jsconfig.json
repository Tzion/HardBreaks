{
  "compilerOptions": {
    "checkJs": true,
    "lib": [
      "es2015",
      "dom",
      "dom.iterable"
    ],
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "strict": false
  },
  "exclude": [
    "node_modules",
    "creative-coding-course"
  ],
  "include": [
    "*.js",
    "*.jsx"
  ]
}