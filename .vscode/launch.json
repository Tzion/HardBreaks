{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/pi/run.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Send Image",
            "skipFiles": [
            "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/pi/send_image.js",
            "args": [
            "49",
            "39",
            "pi/art/3by3.png"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Simulator",
            "url": "http://localhost:8000/sink/simulator/",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "serve-simulator",
            "runtimeArgs": [
                "--new-window"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Upload RP2040",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "upload:rp2040"
            ],
            "console": "integratedTerminal"
        }
    ]
}